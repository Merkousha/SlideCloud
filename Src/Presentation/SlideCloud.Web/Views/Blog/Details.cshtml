@model SlideCloud.Domain.Entities.Blog
@{
    ViewData["Title"] = Model.Title;
    Layout = "_Layout";
}
<section class="page-header">
    <div class="container rtl">
        <div class="page-header__content">
            <nav aria-label="breadcrumb">
                <ol class="eduhive-breadcrumb list-unstyled">
                    <li class="breadcrumb-item"><a href="/"><i class="icon-home"></i> خانه</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Blog")">بلاگ</a></li>
                </ol>
            </nav>
            <h1 class="page-header__title">@Model.Title</h1>
        </div>
    </div>
    <img src="~/assets/images/shapes/page-header-shape-1.png" alt="" class="page-header__shape-one">
    <img src="~/assets/images/shapes/page-header-shape-2.png" alt="" class="page-header__shape-two">
    <div class="page-header__shape-three"></div>
    <div class="page-header__shape-four"></div>
</section>
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
       
            @if (!string.IsNullOrEmpty(Model.FeaturedImage))
            {
                <img src="@Model.FeaturedImage" class="img-fluid rounded mb-4" alt="@Model.Title">
            }

            <h1 class="mb-3">@Model.Title</h1>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <span class="text-muted">By @Model.Author.Name</span>
                    <span class="text-muted ms-2">|</span>
                    <span class="text-muted ms-2">Published on @Model.PublishedAt?.ToString("MMMM dd, yyyy")</span>
                </div>
                @if (User.Identity.IsAuthenticated && Model.AuthorId.ToString() == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                {
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-2">Delete</a>
                    </div>
                }
            </div>

            <div class="blog-content">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .blog-content {
            font-size: 1.1rem;
            line-height: 1.8;
        }

        .blog-content img {
            max-width: 100%;
            height: auto;
            margin: 1rem 0;
        }

        .blog-content p {
            margin-bottom: 1.5rem;
        }
    </style>
} 
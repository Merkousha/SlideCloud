@model IEnumerable<SlideCloud.Domain.Entities.Blog>
@{
    ViewData["Title"] = "My Blog Posts";
    Layout = "_Layout";
}
<section class="page-header">
    <div class="container rtl">
        <div class="page-header__content">
            <ul class="eduhive-breadcrumb list-unstyled">
                <li><span class="eduhive-breadcrumb__icon"><i class="icon-home"></i></span><a href="~/">خانه</a></li>
                <li><span><a href="~/blog"> وبلاگ ما</a></span></li>
                <li><span>پست های من</span></li>
            </ul><!-- /.eduhive-breadcrumb list-unstyled -->
            <h2 class="page-header__title">پست های من</h2>
        </div><!-- /.page-header__content -->
    </div><!-- /.container -->
    <img src="~/assets/images/shapes/page-header-shape-1.png" alt="shape" class="page-header__shape-one">
    <img src="~/assets/images/shapes/page-header-shape-2.png" alt="shape" class="page-header__shape-two">
    <div class="page-header__shape-three"></div><!-- /.page-header__shape-three -->
    <div class="page-header__shape-four"></div><!-- /.page-header__shape-four -->
</section><!-- /.page-header -->

<div class="container mt-4 rtl">
    <div class="row">
        <div class="col-12">
            <a asp-action="Create" class="btn btn-primary mb-4">پست جدید</a>
            <a asp-action="Index" class="btn btn-secondary mb-4 ms-2">همه ی پست ها</a>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(item.FeaturedImage))
                    {
                        <img src="@item.FeaturedImage" class="card-img-top" alt="@item.Title">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Summary</p>
                        <p class="card-text">
                            <small class="text-muted">
                                Created on @item.CreatedAt.ToString("MMMM dd, yyyy")
                                @if (item.IsPublished)
                                {
                                    <span>| Published on @item.PublishedAt?.ToString("MMMM dd, yyyy")</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Draft</span>
                                }
                            </small>
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">مشاهده</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">ویرایش</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">حذف</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 
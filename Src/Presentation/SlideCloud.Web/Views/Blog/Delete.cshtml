@model SlideCloud.Domain.Entities.Blog
@{
    ViewData["Title"] = "Delete Blog Post";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Delete Blog Post</h1>

            <div class="alert alert-danger">
                <h4>Are you sure you want to delete this blog post?</h4>
                <p>This action cannot be undone.</p>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">@Model.Summary</p>
                    <p class="card-text">
                        <small class="text-muted">
                            Created on @Model.CreatedAt.ToString("MMMM dd, yyyy")
                            @if (Model.IsPublished)
                            {
                                <span>| Published on @Model.PublishedAt?.ToString("MMMM dd, yyyy")</span>
                            }
                        </small>
                    </p>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="MyBlogs" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div> 
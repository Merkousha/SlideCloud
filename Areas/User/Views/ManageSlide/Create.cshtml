@using SlideCloud.Models;
@model SlideCloud.Areas.User.Models.Slides.CreateSlides;

@{
    var documentTypes = ViewBag.DocumentTypes as ICollection<DocumentType>;
    var documentCategorys = ViewBag.DocumentCategories as ICollection<DocumentCategory>;

    var documentType = documentTypes.Select(a => new SelectListItem
            {
                Text = a.Name,
                Value = a.Id.ToString()
            });
    var documentCategory = documentCategorys.Select(a => new SelectListItem
            {
                Text = a.Name,
                Value = a.Id.ToString()
            });
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "ثبت اسلاید";
}

@section Styles {
    <style>
        .dropzone-custom {
            min-height: 150px;
            border: 2px dashed #6c5ce7;
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            margin-top: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .dropzone-custom:hover {
            border-color: #4834d4;
            background: #f1f3f5;
        }

        .dropzone-custom .dz-message {
            margin: 2em 0;
            font-size: 1.1em;
            color: #666;
        }

        .dropzone-custom .dz-preview {
            margin: 10px;
        }

        .dropzone-custom.dz-started .dz-message {
            display: none;
        }

        .dropzone-custom .dz-remove {
            color: #dc3545;
            margin-top: 5px;
            cursor: pointer;
        }

        .dropzone-custom .dz-remove:hover {
            text-decoration: underline;
        }

        .upload-status {
            margin-top: 10px;
            padding: 10px;
            border-radius: 5px;
            display: none;
        }

        .upload-status.warning {
            background-color: #fff3cd;
            color: #856404;
            border: 1px solid #ffeeba;
        }

        .upload-status.success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .submit-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .upload-progress {
            height: 3px;
            width: 100%;
            background-color: #f0f0f0;
            border-radius: 3px;
            margin-top: 5px;
            overflow: hidden;
            display: none;
        }

        .upload-progress-bar {
            height: 100%;
            background-color: #6c5ce7;
            width: 0;
            transition: width 0.3s ease;
        }

        .success-modal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            z-index: 1000;
            text-align: center;
            min-width: 300px;
        }

        .success-modal .icon {
            font-size: 50px;
            color: #28a745;
            margin-bottom: 20px;
        }

        .success-modal h3 {
            color: #333;
            margin-bottom: 15px;
        }

        .success-modal p {
            color: #666;
            margin-bottom: 20px;
        }

        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            z-index: 999;
        }

        .success-modal .progress {
            width: 100%;
            height: 4px;
            background: #f0f0f0;
            border-radius: 2px;
            margin-top: 20px;
            overflow: hidden;
        }

        .success-modal .progress-bar {
            width: 0;
            height: 100%;
            background: #28a745;
            transition: width 3s linear;
        }
    </style>
}

